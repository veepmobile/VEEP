@{
    Layout = null;
}

<script src="~/Scripts/iss/debt.js?ver=20170504"></script>
<script src="~/Scripts/progs2.js"></script>
<div class="left_content">
    <div style="float:left;width:100%;padding-top:20px;" id="bankruptcy_found">
        <div id="summary"></div>
        <div id="search_count" style="margin-top:10px;"></div>
        <div id="t_content"></div>
        <div id="pager"></div>
        <div id="link_details"></div>
    </div>
</div>

<div class="right_content">
    <h3>Уточнить параметры поиска</h3>
    <div class="filter_form">
        <div class="filter_block">
            <h4>Совпадения по</h4>
            <div id="statusSelect" class="form-group">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" name="querselect" value=1 checked />
                        <span class="mode_green">V</span>&nbsp;Наименование и адрес
                    </label>
                </div>
                <div class="checkbox">
                    <label>
                        <input type="checkbox" name="querselect" value=2 />
                        <span class="cat_yellow">Н</span>&nbsp;Наименование
                    </label>
                </div>
                <div class="checkbox">
                    <label>
                        <input type="checkbox" name="querselect" value=3 />
                        <span class="mode_red">А</span>&nbsp;Адрес
                    </label>
                </div>
            </div>
        </div>
        <div class="filter_block">
            <h4>Период</h4>
            <div class="form-inline">
                <div class="form-group">
                    <label>с</label>
                    <input type="text" name="dfrom" id="dfrom" class="form-control" style="width:80px;" />
                </div>
                <div class="form-group">
                    <label>по</label>
                    <input type="text" name="dto" id="dto" class="form-control" style="width:80px;" />
                </div>
            </div>
        </div>
        <div class="filter_block">
            <h4> Номер исполнительного производства</h4>
            <div class="form-inline">
                <div class="form-group">                 
                    <input type="text" name="nproizv" id="nproizv" class="form-control" />
                </div>                
            </div>
        </div>
        <div class="filter_block">
            <h4>Регион исполнительного производства</h4>
            <select id="regSelect" class="form-control" style="width:280px;"></select>
        </div>
        @*<div class="filter_block">
            <h4>Адрес должника</h4>
            <select id="addrSelect" class="form-control" style="width:280px;"></select>
        </div>*@
        <div class="filter_block">
            <h4>Предмет исполнения</h4>
            <select id="perfobject" class="form-control" style="width:280px;"></select>
        </div>
        <div class="filter_block">
            <h4>Статус производства</h4>
            <div id="statusSelect" class="form-group">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" name="verselect" value="0" />
                        <span class="cat_yellow">Н</span>&nbsp;Не завершено
                    </label>
                </div>
                <div class="checkbox">
                    <label>
                        <input type="checkbox" name="verselect" value="1" />
                        <span class="cat_blue">З</span>&nbsp;Завершено
                    </label>
                </div>
            </div>
        </div>
        @*<div class="filter_block">
            <h4>Должник</h4>
            <div id="debtors" class="form-group"></div>
        </div>*@
        <div class="filter_block button_block">
            <div class="form-group">
                <input type="button" value="Применить" class="btns darkblue large" id="btn_find">
            </div>
        </div>
    </div>
</div>

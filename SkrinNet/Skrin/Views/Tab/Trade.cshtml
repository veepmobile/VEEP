@model Skrin.Models.Iss.Content.TradeInitValues
@{
    Layout = null;
}
<script>
    var MAX_TRADEDATE = "@Model.maxrd";
    var MIN_TRADEDATE = "@Model.minrd";
</script>
<script src="~/Scripts/iss/trade.js"></script>
<div class="left_content">
    <div id="search_count" style="margin-top:6px;"></div>
    <div id="full_view" style="margin-bottom:10px;"></div>
    <div id="t_content"></div>
</div>
<div class="right_content">
    <h3>Уточнить параметры поиска</h3>
    <div class="filter_form">
        <div class="filter_block">
            <h4>Период</h4>
            <div class="form-inline">
                <div class="form-group">
                    <label>с</label>
                    <input type="text" name="dfrom" id="dfrom" value="@Model.dstart" class="form-control" style="width:80px;" />
                </div>
                <div class="form-group">
                    <label>по</label>
                    <input type="text" name="dto" id="dto" value="@Model.dend" class="form-control" style="width:80px;" />
                </div>
            </div>
        </div>
        <div class="filter_block">
            <h4>Организатор торгов</h4>
            <div class="form-group">
                @foreach (var item in Model.exchange_list.Where(p=>p.exists))
                {
                    <div class="checkbox">
                        <label><input type="checkbox" name="exchange" checked="checked" value="@item.id">@item.name</label>
                    </div>
                }                
            </div>
        </div>
        <div class="filter_block">
            <h4>Ценные бумаги</h4>
            <div class="form-group">
                @foreach (var item in Model.issues_list.Where(p => p.exists))
                {
                    <div class="checkbox">
                        <label><input type="checkbox" name="issues" checked="checked" value="@item.id">@item.name</label>
                    </div>
                }
            </div>
        </div>
        <div class="filter_block">
            <h4>Ценные бумаги</h4>
            <div class="form-group">
                <div class="radio">
                    <label>
                        <input type="radio" name="currency" value="1" checked="checked">Российские рубли
                    </label>
                </div>
                <div class="radio">
                    <label>
                        <input type="radio" name="currency" value="2">Доллары США
                    </label>
                </div>
            </div>
        </div>
        <div class="filter_block button_block">
            <div class="form-group">
                <input type="button" value="Применить" class="btns darkblue large" id="btn_find">
            </div>
        </div>
    </div>
</div>
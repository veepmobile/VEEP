@using Skrin.BLL.Infrastructure
@using Skrin.BLL.Authorization
@using Skrin.BLL.Root
@using Skrin.Models.Iss

@model Skrin.Models.ProfileFL.ProfileFLModel
@{Layout = null;}

@{
    UserSession us = Context.GetUserSession();
    int user_id = us.UserId;
}

<style>
    .status_green {
        color: #03BC00;
    }

    .status_red {
        color: #CD2B25;
    }

    .title {
        position: relative;
    }

        .title em {
            display: none;
        }

        .title:hover em {
            background-color: #fffbed;
            border-radius: 5px;
            top: 32px;
            box-shadow: 0 0 5px #666;
            color: #555;
            display: block;
            font-style: normal;
            right: 10px;
            line-height: 16pt;
            padding: 10px;
            position: absolute;
            text-decoration: none;
            white-space: nowrap;
            font-size: 12px;
        }
</style>

<script type="text/javascript">
    var fio = "@Model.fio";
    var inn = "@Model.inn";
    function getProfileFLPdf(fio, inn) {
        var addr = String(location.href).split("/")[2]
        location.href = '/ProfileFL/Export?fio=' + fio + '&inn=' + inn + '&url=' + addr;
    }
    var user_id=@(user_id);
</script>


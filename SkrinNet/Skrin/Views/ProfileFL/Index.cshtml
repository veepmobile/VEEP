                        <hr />
                        <a class="skrin_service" href="http://skrin.ru"><span class="span_service_header">&nbsp;</span><span class="span_service_title">Все сервисы</span></a>
                    </div>
                </div>
            </div>

            <ul class="firts_level">
                <li>
                    <div class="t_level selected linkable" id="mn1">Профиль</div>
                </li>
                @if (Model.isBancruptcy)
                {
                    <li>
                        <div class="t_level linkable" id="mn2">Сообщения о банкротстве</div>
                    </li>

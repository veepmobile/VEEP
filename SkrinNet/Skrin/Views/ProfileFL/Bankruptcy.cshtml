@using Skrin.BLL.Infrastructure

@model Skrin.Models.ProfileFL.ProfileFLModel
@{Layout = null;}

<script src="~/Scripts/profilefl/bancruptcy.js"></script>

<h1>@Model.fio</h1>
<h2>ИНН: @Model.inn</h2>
<div id="search_type_selector">
    @if (Model.inn != "")
    {
        <div class="radio">
            <label>
                <input type="radio" value="2" name="vkl" checked='checked' />
                Поиск по ИНН
            </label>
        </div>
    }
    <div class="radio">
        <label>
            <input type="radio" value="1" name="vkl" @(Model.inn != "" ? "" : "checked='checked'") />
            Поиск по ФИО
        </label>
    </div>
</div>
<div class="left_content">
    <div style="float:left;width:100%;padding-top:20px;" id="bankruptcy_found">
        <div id="search_count" style="margin-top:6px;"></div>
        <div id="t_content"></div>
        <div id="pager"></div>
        <div id="link_details"></div>
        <div id="testing" />
    </div>
</div>
<div class="right_content">
    <h3>Уточнить параметры поиска</h3>
    <div class="filter_form">
        <div class="filter_block">
            <div class="form-group">
                <h4>Текст</h4>
                <span id="autosearch_text"></span>
                <input type="text" name="kw" id="kw" class="form-control" style="width:90%" />
            </div>

        </div>
        <div class="filter_block">
            <h4>Период</h4>
            <div class="form-inline">
                <div class="form-group">
                    <label>с</label>
                    <input type="text" name="dfrom" id="dfrom" class="form-control" style="width:100px;" />
                </div>
                <div class="form-group">
                    <label>по</label>
                    <input type="text" name="dto" id="dto" class="form-control" style="width:100px;" />
                </div>
            </div>
        </div>
        <div class="filter_block">
            <h4>Источник</h4>
            <div class="form-group" id="td_sselect"></div>
        </div>
        <div id="type_selector_container">

        </div>
        <div class="filter_block button_block">
            <div class="form-group">
                <input type="button" value="Применить" class="btns darkblue large" id="btn_find">
            </div>
        </div>
    </div>
</div>


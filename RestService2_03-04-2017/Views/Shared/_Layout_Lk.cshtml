<!DOCTYPE html>
<html>
    <head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        <link rel="stylesheet" type="text/css" media="screen" href="~/Content/bootstrap.css" />
        <link rel="stylesheet" type="text/css" media="screen" href="~/Content/bootstrap-datetimepicker.css" />
    </head>
<body style="padding-left:50px;">
           <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("VEEP Личный кабинет", "Index", "Lk")</li>
                    </ul>
                    <ul class="nav navbar-nav right" id="logout">
                        <li>@Html.ActionLink("Выход", "Logout", "Lk")</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container body-content">
    @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year – VEEP</p>
            </footer>
        </div>




    @Scripts.Render("~/bundles/jquery")
            <script src="~/Scripts/bootstrap.js" type="text/javascript"></script>
        <script src="~/Scripts/moment.js" type="text/javascript"></script>
        <script src="~/Scripts/bootstrap-datetimepicker.js" type="text/javascript"></script>
        <script src="~/Scripts/bootstrap-datetimepicker.ru.js" type="text/javascript"></script>
        <script src="~/Scripts/bootstrap-dropdown.js" type="text/javascript"></script>
    @RenderSection("scripts", required: false)


</body>
</html>

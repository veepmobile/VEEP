@section Scripts 
{
    <script type="text/javascript">
        $(document).ready(function () {

            $('#dateclear').click(function (e) {
                clear_filter();
            });

            $('#dateselect').click(function (e) {
                var filters = {
                    FilterBeginDate: $('#beginDate').val(),
                    FilterEndDate: $('#endDate').val()
                };
                $('#LoadingImage').show();
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("OrdersLoad", "Orders")',
                data: filters,
                success: function (msg) {
                    $('#LoadingImage').hide();
                    $('#placedata').empty().html(msg);
                }
                });

        });
        });

        function exportexcel() {
            var dfrom = $('#beginDate').val();
            var dto = $('#endDate').val();
            document.location.href = "/Orders/OrdersExcel?dfrom=" + dfrom + "&dto=" + dto;
        }
